server {
    listen       80;
    listen       [::]:80;
    server_name  {nginx.server_name};
    root         {{ python.root }};

    location = / {
        proxypass = http://{{python.host}}:{{python.port}}/
    }

    error_page 404 /404.html;
    location = /404.html {
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
    }
}
